{{#partial "preContent"}}
    <div class="jumbotron jumbotrion-fluid sighting-jumbotron"style="background-image:url(/images/george-brits-wvO5tPfTpug-unsplash.jpg);background-size: cover;background-repeat: no-repeat;height: 100vh;width: 100vw;">
        <div class="container">
             <h1 class="display-3" style="font-size: 7.5rem;font-family: serif;font-weight: revert;color: #fff">Eco friendly Environment with the Wild</h1>
             <p class="lead" style="color:#fff">Kenya pride of africa keeping track of our animals</p>
        </div>
    </div>
{{/partial}}

{{#partial "content"}}
    {{#if sightings}}
        <h2 class="text-center"style="margin-top: -35%;color: #fff;font-size: xx-large;font-weight: 600;">All Locations</h2>
        <ul class="list-group" style="opacity:0.7;">
        {{#each sightings}}
            <li class="list-group-item"><a href="/sightings/{{location}}/details">{{location}}</a></li>
        {{/each}}
        </ul>
    {{else}}
        <h5 class="text-center">No locations have been added. Report a sighting to add a new location</h5>
    {{/if}}

{{/partial}}

