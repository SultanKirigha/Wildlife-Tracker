        </div>
    </li>
    <li class="nav-item"><a class="nav-link" href="/rangers">Our Rangers</a></li>
    <li class="nav-item active"><a class="nav-link" href="/sightings">Sighting Locations</a></li>
    <li class="nav-item"><a class="nav-link" href="/sighting/new">New Sighting</a></li>
{{/partial}}

{{#partial "preContent"}}
        <div class="jumbotron jumbotrion-fluid sighting-jumbotron"style="background-image:url(/images/cara-fuller-QF38t6obcnk-unsplash.jpg);background-size: cover;background-repeat: no-repeat;height: 100vh;width: 100vw;">
        <div class="container">
              <h1 style="font-size: 7.5rem;font-family: serif;font-weight: revert;color: #fff">Karibu for a safari in the wild</h1>
              <p class="lead">Kenya pride of africa keeping track of our animals</p>
        </div>
    </div>
{{/partial}}

{{#partial "content"}}
    <h2 class="text-center"style="margin-top: -45%;color:#fff;"><u><b>{{location}}</b></u></h2>
    <h4 class="text-center"style="color:#fff;">Animals Spotted In This Region</h4>
    <table class="table text-center">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Animal Seen</th>
            <th scope="col">Time</th>
            <th scope="col">Ranger</th>
        </tr>
        </thead>
        <tbody>
        {{#each sightings}}
            <tr>
                <td>{{animalName}}</td>
                <td>{{readableTimestamp}}</td>
                <td><a href="/rangers/{{rangerid}}/details">{{rangerName}}</a></td>
            </tr>
        {{/each}}
        </tbody>
    </table>

{{/partial}}

{{> layout.hbs}}