{{#partial "preContent"}}
    <div class="jumbotron jumbotrion-fluid animal-jumbotron"style="background-image:url(/images/catherine-merlin--kbm8KO32Xg-unsplash.jpg);background-size: cover;background-repeat: no-repeat;height: 100vh;width: 100vw;">
        <div class="container">
            <h1 class="display-3"style="font-size: 7.5rem;font-family: serif;font-weight: revert;color: #fff">The Beauty of our Natural Resources</h1>
            <p class="lead" style="color:#fff">Kenya pride of africa keeping track of our animals</p>
        </div>
    </div>
{{/partial}}

{{#partial "content"}}
    {{#if normal}}
        <table class="table text-center">
            <h4 class="text-center"style="margin-top: -50%;color: #fff;font-size: xx-large;font-weight: 600;">Non-endangered animals spotted by our Rangers</h4>
            <thead class="thead-dark">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Health</th>
                <th scope="col">Age</th>
            </tr>
            </thead>
            <tbody style="color:#fff;">
            {{#each normal}}
                <tr>
                    <td>{{name}}</td>
                    <td>{{health}}</td>
                    <td>{{age}}</td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    {{else}}
        <h5 class="text-center">No animals sighted yet. Report a sighting to have it appear here</h5>
    {{/if}}

{{/partial}}

{{> layout.hbs}}