{{#partial "content"}}
    {{#if sightings}}
        <h4 class="text-center" style="margin-top: -50%;color: #fff;font-size: xx-large;font-weight: 600;">Data collected on the animal sightings</h4>
        <table class="table text-center">
            <thead style="background-color:#fff; color:black;opacity:0.5;">
            <tr>
                <th scope="col">Animal Seen</th>
                <th scope="col">Location</th>
                <th scope="col">Spotted On</th>
                <th scope="col">Ranger</th>
            </tr>
            </thead>
            <tbody style="color:#fff;">
            {{#each sightings}}
                <tr>
                    <td>{{animalName}}</td>
                    <td>{{location}}</td>
                    <td>{{readableTimestamp}}</td>
                    <td>{{rangerName}}</a></td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    {{else}}
        <h5 class="text-center">No animals sighted yet. Report a sighting to have it appear here</h5>
    {{/if}}
{{/partial}}

